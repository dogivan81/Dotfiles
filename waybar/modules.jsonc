    "cpu": {
        "format": "{usage}% C",
        "tooltip": false,
        "on-click": "~/.config/scripts/htop_toggle.sh"
    },

    "memory": {
        "format": "{}% M",
        "on-click": "~/.config/scripts/htop_toggle.sh"
    },

    "disk": {
        "interval": 30,
        "format": "{percentage_used}% D",
        "path": "/",
        "on-click": "~/.config/scripts/htop_toggle.sh"
    },

    "user": {
        "format": "{user}",
        "interval": 60
    },

    "group/hardware": {
        "orientation": "inherit",
        "modules": [
            "cpu",
            "memory",
            "disk"
        ]
    },

    "hyprland/language": {
        "format": "{short}"
    },

    "hyprland/submap": {
        "format": "{}",
        "on-click": "hyprctl dispatch submap reset"
    },

    "clock": {
        "format": "{:%H:%M %a}",
        "format-alt": "{:%Y-%m-%d}",
        "on-click": "ags toggle calendar"
    },

    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "{volume}% ÔÑ∞",
